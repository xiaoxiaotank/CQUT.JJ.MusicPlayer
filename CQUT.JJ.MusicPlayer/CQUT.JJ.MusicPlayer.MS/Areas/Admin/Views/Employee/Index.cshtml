@{
    ViewBag.Title = "员工管理";
}
@section Styles{
    <link href="~/lib/zTree/css/zTreeStyle/zTreeStyle.css" rel="stylesheet" />
    <link href="~/css/admin/employee/index.css" rel="stylesheet" />
}

<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>@ViewBag.Title</small>
        <button id="createEmployee" class="btn btn-primary func-btn"><span class="fa fa-plus">&nbsp; 添加员工</span></button>
        <button id="exportToExcel" class="btn btn-success func-btn"><span class="fa fa-file-excel-o">&nbsp; 导出到Excel</span></button>
    </h1>
</section>
<section class="content">
    <div id="employeeGrid" class="ag-theme-balham"></div>
</section>

@section scripts{
    <script src="~/lib/ag-grid/js/zh-cn.js"></script>
    <script src="~/lib/ag-grid/js/ag-grid-enterprise.min.js"></script>
    <script src="~/lib/ag-grid/js/custom.js"></script>
    <script src="~/js/admin/employee/index.js"></script>
}