@model CQUT.JJ.MusicPlayer.MS.Areas.Admin.Models.Employee.CreateEmployeeViewModel
<div class="modal fade" id="my-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <form asp-action="Create" asp-controller="Employee" asp-area="Admin" data-ajax="true" data-ajax-method="post" data-ajax-success="afterCreateEmployee">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">添加员工</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                            <div class="col-md-6">
                                <input name="UserName" class="form-control" />
                                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "validate-error" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.NickName, new { @class = "col-md-2 control-label" })
                            <div class="col-md-6">
                                <input name="NickName" class="form-control" />
                                @Html.ValidationMessageFor(m => m.NickName, null, new { @class = "validate-error" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary">确定</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $('#my-modal').modal('show');
</script>

