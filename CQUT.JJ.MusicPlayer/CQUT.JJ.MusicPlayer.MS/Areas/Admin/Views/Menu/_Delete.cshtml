@model CQUT.JJ.MusicPlayer.MS.Areas.Admin.Models.Menu.DeleteMenuItemViewModel

<div class="modal fade" id="my-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">删除菜单项</h4>
            </div>
            <form asp-action="DeleteMenuItem" asp-controller="Menu" asp-area="Admin" data-ajax="true" data-ajax-method="post" data-ajax-success="deleteMenuItemed">
                @Html.HiddenFor(model => model.Id)
                <div class="modal-body">
                    <h4>您确定要删除<span class="title-highlight">@Model.Header</span>菜单项吗？</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="cancel">取消</button>
                    <button type="submit" class="btn btn-danger" id="submit">确定</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $("#my-modal").modal('show');
</script>

