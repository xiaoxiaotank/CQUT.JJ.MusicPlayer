@model List<JJJ.CQLG.MIS.Web.Areas.Admin.Models.Shared.MenuItem>

<ul class="treeview-menu">
    @foreach (var item in Model)
    {
        if (item.HasChild)
        {
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-circle-o"></i> <span>@item.Name</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                @Html.Partial("_SidebarChildren", item.Children)
            </li>
        }
        else
        {
            <li>
                <a href="@item.Url">
                    <i class="fa fa-circle-o"></i> <span>@item.Name</span>
                </a>
            </li>
        }
    }
</ul>
