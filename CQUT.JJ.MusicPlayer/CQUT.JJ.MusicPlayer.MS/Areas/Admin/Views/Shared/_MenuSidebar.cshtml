@using Microsoft.AspNetCore.Http
@using CQUT.JJ.MusicPlayer.MS.Utils.Helpers;
@using Newtonsoft.Json;
@{
    var user = Context.Session.GetCurrentUser();
}
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        @if (user != null)
        {
             <!-- Sidebar user panel (optional) -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="~/lib/resources/user-160x160.jpg" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>@user.NickName</p>
                    <!-- Status -->
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            </div>
            <!-- search form (Optional) -->
            <div class="row">
                <div class="col-md-4">
                    <button class="btn sidebar-btn sidebar-form">@Html.ActionLink("菜单管理","Index","Menu",new { area="Admin" })</button>
                </div>
                <div class="col-md-8">
                    <div class="sidebar-form no-border">
                        <div class="input-group">
                            <input type="text" name="q" id="search" class="form-control" placeholder="搜索...">
                            <span class="input-group-btn">
                                <button name="search" id="search-btn" class="btn btn-flat">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>

            </div>

            <!-- /.search form -->
            <!-- Sidebar Menu -->
            <div id="sidebardiv">
                @await Component.InvokeAsync("Menu")
            </div>
    <!-- /.sidebar-menu -->
    }
</section>
    <!-- /.sidebar -->
</aside>