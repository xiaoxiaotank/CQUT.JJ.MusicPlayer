@model CQUT.JJ.MusicPlayer.MS.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style{
    <link href="~/lib/admin-lte/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/lib/iCheck/square/blue.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/account/register.css" rel="stylesheet" />
}
<div class="hold-transition">
    <div class="register-box">
        <div class="register-logo">
            <a id="title" href="javascript:void(0)"><b>JJ</b> Music</a>
        </div>
        <div class="register-box-body">
            <p class="register-box-msg">用户注册</p>
            <form asp-action="Register" asp-controller="Account" asp-area="" data-ajax="true" data-ajax-method="post" data-ajax-success="afterRegister" asp-antiforgery="true">
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "用户名" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.NickName, new { @class = "form-control", placeholder = "用户名" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "密码" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "重新输入密码" })
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <a href="/Account/Login">已有账号？去登录</a>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">注册</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
    </div>
    <script src="~/js/account/register.js"></script>
</div>

